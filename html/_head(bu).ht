function get_client_count(date){
    Ext.Ajax.request({
        url: '{MAIN_URL}admin/info?detect=get_tours_count&date='+date,
		
        success: function (response) { 
            
			if(response.responseText!='undefined'){ 
                var data = Ext.JSON.decode(response.responseText);
                
                document.getElementById('tourist_count').innerHTML='Вылетают: туристы - '+data.start_clients+'(туров - '+data.start_deals+')<br>'+
                'Возвращаются: туристы - '+data.end_clients+'(туров - '+data.end_deals+')<br>'+
                'Забронировано: туристы - '+data.end_clients+'(туров - '+data.end_deals+')<br>'; ; 
                
                
			
		  }
		},
		failure: function(){ alert('Неизвестная ошибка'); }
	});    

}


